 @model MyContactBook.UI.Models.DTO.ContactDTO
@{
}


<h1 class="mt-3">Edit Contacts</h1>

@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="ContactId" readonly/>
        </div>
        <div class="mt-3">
            <label class="form-label">FirstName</label>
            <input type="text" class="form-control" asp-for="FirstName" />
        </div>
        <div class="mt-3">
            <label class="form-label">LastName</label>
            <input type="text" class="form-control" asp-for="LastName" />
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email" />
        </div>
        <div class="mt-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" />
        </div>
        <div class="mt-3">
            <label class="form-label">Gender</label>
            <input type="text" class="form-control" asp-for="Gender" />
        </div>
        <div class="mt-3">
            <label class="form-label">IsActive</label>
            <input type="text" class="form-control" asp-for="IsActive" />
        </div>
        <div class="mt-3">
            <label class="form-label">PhoneNumber</label>
            <input type="text" class="form-control" asp-for="PhoneNumber" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}
